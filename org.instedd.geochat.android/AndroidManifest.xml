<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.instedd.geochat"
      android:versionCode="1"
      android:versionName="1.0">
      
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application android:icon="@drawable/icon" android:label="@string/app_name">
    	<provider android:name="GeoChatProvider"
            android:authorities="org.instedd.geochat.provider.GeoChat"
        />
        
        <activity android:name=".LoginActivity"
                  android:label="@string/app_name"
                  android:alwaysRetainTaskState="true"
                  android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    
        <activity android:name=".GeoChatTabsActivity"
                  android:label="@string/app_name" />
        <activity android:name=".GroupsActivity"
        		  android:label="@string/groups"
        		  android:theme="@android:style/Theme.NoTitleBar" />
		<activity android:name=".PeopleActivity"
        		  android:label="@string/people"
        		  android:theme="@android:style/Theme.NoTitleBar" />
        <activity android:name=".MessagesActivity"
        		  android:label="@string/messages"
        		  android:theme="@android:style/Theme.NoTitleBar" />
        		  
       	<service android:name=".GeoChatService"
            android:exported="true"/>
    </application>
</manifest> 
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    >
    <org.instedd.geochat.BorderImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:minWidth="50dp"
		android:minHeight="50dp"
		android:layout_marginRight="9dp"
		android:layout_marginTop="9dp"
		android:src="@drawable/default_user_icon"
		android:id="@+id/icon" />
	<TextView
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_toRightOf="@+id/icon"
	   style="@android:style/TextAppearance.Large"
	   android:id="@+id/display_name" />
	<TextView
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_below="@+id/display_name"
	   android:layout_alignLeft="@+id/display_name"
	   style="@android:style/TextAppearance.Small"
	   android:id="@+id/location" />
	<TextView
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_below="@+id/location"
	   android:layout_alignLeft="@+id/location"
	   android:id="@+id/login_colon"
	   style="@android:style/TextAppearance.Small"
	   android:paddingRight="4dp"
	   android:text="@string/login_colon" />
	<TextView
	   android:layout_width="fill_parent"
	   android:layout_height="fill_parent"
	   android:layout_toRightOf="@+id/login_colon"
	   android:layout_alignBaseline="@+id/login_colon"
	   style="@android:style/TextAppearance.Small"
	   android:id="@+id/login" />
</RelativeLayout>